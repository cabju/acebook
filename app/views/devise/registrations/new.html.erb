<div class="jumbotron" style="padding:50px">
<p><strong class="purple usernamefont"><%=fa_icon "user"%> Sign up</strong></p>
<div class="jumbotron" style="padding:50px">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {multipart: :true}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class: "signup" %>
  </div>
<br>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "signup" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup" %>
  </div>
<br>
  <div class="field">
  <p>Upload avatar/image</p>
    <%= f.label :avatar do %>
      <%= f.file_field :avatar, class: "signup" %>
      <%= f.hidden_field :avatar_cache %>
    <% end %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
</div>