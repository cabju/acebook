<p><%= post.message %></p>
<p><%= post.created_at.strftime('%H:%M:%S') %></p>

<%= render @comments %>


<%= form_for @comment do |form| %>
  <%= form.label :comment %>
  <%= form.text_field :comment %>
  <%= form.hidden_field :post_id, :value => post.id %>

  <%= form.submit "Submit" %>
<% end %>

<% end %>



